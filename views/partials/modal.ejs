<!-- Button trigger modal -->

<% if(!currentUser) { %>
<a href="#" class="download login"  data-toggle="modal" data-target="#exampleModalCenter"><i class="key icon"></i>Log In as Admin</a>
<% } else { %>
<a href="/logout" class="download logout">Log Out</a>
<% } %>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header" style="background:#FEBB01;">
        <h5 class="modal-title" id="exampleModalLongTitle"><i class="key icon"></i>Log In as Admin</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <form action="/login" method="POST">
      <div class="modal-body">
        <div class="form-group">
          <label for="exampleInputEmail1">Username</label>
          <input type="text" class="form-control" name="username" placeholder="Username">
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <input type="password" class="form-control" name="password" placeholder="Password">
        </div>

      </div>
      <div class="modal-footer">
        <button type="submit" name="login" class="downloads fluid ui button">Log In</button>

      </form>
    </div>
  </div>
</div>
